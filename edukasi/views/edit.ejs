<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Edit Objek</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous" />
</head>
<body>
  <%- include('partials/header') %>
  <div class="container mt-5">
    <h1 class="mb-4">Edit Objek</h1>

    <form action="/admin/edit/<%= objek.id %>" method="POST" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="nama" class="form-label">Nama Objek:</label>
        <input type="text" id="nama" name="nama" class="form-control" value="<%= objek.nama %>" required />
      </div>

      <div class="mb-3">
        <label for="kategori_id" class="form-label">Kategori:</label>
        <select id="kategori_id" name="kategori_id" class="form-select" required>
          <% kategori.forEach(item => { %>
            <option value="<%= item.id %>" <%= objek.kategori_id === item.id ? 'selected' : '' %>>
              <%= item.nama %>
            </option>
          <% }) %>
        </select>
      </div>

      <div class="mb-3">
        <label class="form-label">Gambar Saat Ini:</label><br>
        <img src="/img/<%= objek.image %>" width="150" class="img-thumbnail mb-2" alt="Gambar saat ini" />
        <label for="image" class="form-label">Upload Gambar Baru (opsional):</label>
        <input type="file" id="image" name="image" class="form-control" accept="image/*" />
      </div>

      <div class="mb-3">
        <label class="form-label">Audio Saat Ini:</label><br>
        <audio controls class="mb-2">
          <source src="/audio/<%= objek.audio %>" type="audio/mpeg" />
          Browser tidak mendukung audio.
        </audio>
        <label for="audio" class="form-label">Upload Audio Baru (opsional):</label>
        <input type="file" id="audio" name="audio" class="form-control" accept="audio/*" />
      </div>

      <button type="submit" class="btn btn-primary">Simpan Perubahan</button>
      <a href="/admin" class="btn btn-secondary ms-2">Batal</a>
    </form>
  </div>
  <%- include('partials/footer') %>
</body>
</html>
