<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Halaman Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
</head>
<body>
  <%- include('partials/header') %>
  <h1 class="text-center">Daftar Objek</h1>

  <div class="d-flex justify-content-center my-3">
    <a href="/admin/tambah" class="btn btn-success">Tambah Objek</a>
  </div>

  
  <div class="container mt-4 d-flex justify-content-center">
     <table class="table table-bordered text-center w-auto">
      <thead>
        <tr>
          <th>No</th>
          <th>Nama</th>
          <th>Gambar</th>
          <th>Audio</th>
        </tr>
      </thead>
      <tbody>
        <% if (data.length === 0) { %>
          <tr>
            <td colspan="5">Belum ada data objek.</td>
          </tr>
        <% } else { %>
          <% data.forEach((item, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= item.nama %></td>
              <td>
                <img src="/img/<%= item.image %>" alt="Gambar" width="100">
              </td>
              <td>
                <audio controls>
                  <source src="/audio/<%= item.audio %>" type="audio/mpeg">
                  Browser Anda tidak mendukung pemutar audio.
                </audio>
              </td>
              <td>
                <a href="/admin/edit/<%= item.id %>" class="btn btn-warning">Edit</a> |
                <a href="/admin/hapus/<%= item.id %>" onclick="return confirm('Apakah Anda yakin ingin menghapus data ini?')" class="btn btn-danger">Hapus</a>
              </td>

            </tr>
          <% }); %>
        <% } %>
      </tbody>
    </table>
  </div>
  <%- include('partials/footer') %>
</body>
</html>
