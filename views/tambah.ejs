<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Tambah Objek</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous" />
</head>
<body>
  <%- include('partials/header') %>
  <div class="container mt-5">
    <h1 class="mb-4">Tambah Objek</h1>

    <form action="/admin/tambah" method="POST" enctype="multipart/form-data">
      
      <div class="mb-3">
        <label for="nama" class="form-label">Nama Objek:</label>
        <input type="text" id="nama" name="nama" class="form-control" required />
      </div>

      <div class="mb-3">
        <label for="kategori_id" class="form-label">Kategori:</label>
        <select id="kategori_id" name="kategori_id" class="form-select" required>
          <option value="">Pilih Kategori</option>
          <% kategori.forEach(item => { %>
            <option value="<%= item.id %>"><%= item.nama %></option>
          <% }); %>
        </select>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Gambar:</label>
        <input type="file" id="image" name="image" class="form-control" accept="image/*" required />
      </div>

      <div class="mb-3">
        <label for="audio" class="form-label">Audio:</label>
        <input type="file" id="audio" name="audio" class="form-control" accept="audio/*" required />
      </div>

      <button type="submit" class="btn btn-primary">Simpan</button>
      <a href="/admin" class="btn btn-secondary ms-2">Kembali</a>
    </form>
  </div>
  <%- include('partials/footer') %>
</body>
</html>
